@model IEnumerable<Voxtus_Tech.Models.ContactUs>

<!--For truncate-->
@functions {
    public string Truncate(string input, int length)
    {
        if (string.IsNullOrEmpty(input) || input.Length <= length)
            return input;
        return input.Substring(0, length) + ".........";
    }
}

@{
    ViewData["Title"] = "Contact Us Records";
}

<main id="main">
    @if (TempData["Message"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @TempData["Message"]
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    }
<section class="breadcrumbs">
    <div class="container">

        <div class="d-flex justify-content-between align-items-center">
            <h1 class="h2 fw-light">Contact Us Records</h1>
        </div>

    </div>
</section>
    <div class="container-fluid">
    <div class="card-body mt-5">
            @if (!Model.Any())
            {
                <div class="alert alert-info text-center">No contact records found.</div>
            }
            else
            {
                <div class="table-responsive">
                    <table class="table table-bordered table-hover align-middle">
                        <thead class="table-light">
                            <tr>
                                <th>Name</th>
                                <th>Phone No.</th>
                                <th>Email</th>
                                <th width="400px">Message</th>
                                <th>Submitted On</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.PhoneNo</td>
                                    <td>@item.Email</td>
                                    <td>@Truncate(@item.Message,200)</td>
                                    <td>@item.CreatedDateTime.ToString("dd MMM yyyy hh:mm tt")</td>
                                    <td class="text-center">
                                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-secondary me-1">
                                            <i class="bi bi-eye"></i> View
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" onclick="return confirm('Click Ok If you want to delete this record');">
                                            <i class="bi bi-trash"></i> Delete
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
        </div>
        </div>
</main>

